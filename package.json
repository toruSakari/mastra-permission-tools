{
	"name": "@toru-sakari/mastra-permission-tools",
	"version": "1.0.0",
	"description": "A robust permission control system for Mastra agent tools with fine-grained access control",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"clean": "rimraf dist",
		"test": "vitest",
		"test:coverage": "vitest run --coverage",
		"lint": "eslint src --ext ts,tsx",
		"format": "biome format --write",
		"prepublishOnly": "pnpm run clean && pnpm run build",
		"typecheck": "tsc --noEmit",
		"release": "changeset publish"
	},
	"keywords": [
		"mastra",
		"agent",
		"permission",
		"security",
		"access-control",
		"tools",
		"ai",
		"typescript"
	],
	"author": "toruSakari",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/toruSakari/mastra-permission-tools.git"
	},
	"bugs": {
		"url": "https://github.com/toruSakari/mastra-permission-tools/issues"
	},
	"homepage": "https://github.com/toruSakari/mastra-permission-tools#readme",
	"dependencies": {
		"@mastra/core": "^0.6.4",
		"pg": "^8.15.6",
		"zod": "^3.22.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@changesets/cli": "^2.27.1",
		"@types/node": "^20.11.24",
		"@typescript-eslint/eslint-plugin": "^7.1.1",
		"@typescript-eslint/parser": "^7.1.1",
		"@vitest/coverage-v8": "^1.3.1",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"jsdom": "^26.1.0",
		"prettier": "^3.2.5",
		"rimraf": "^5.0.5",
		"tsup": "^8.0.2",
		"typescript": "^5.3.3",
		"vitest": "^1.3.1"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
