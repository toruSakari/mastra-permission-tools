{
	"name": "@toru-sakari/mastra-permission-tools",
	"version": "0.1.0",
	"description": "A robust permission control system for Mastra agent tools with fine-grained access control",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		},
		"./react": {
			"types": "./dist/react/index.d.ts",
			"import": "./dist/react/index.mjs",
			"require": "./dist/react/index.js"
		}
	},
	"files": ["dist", "README.md", "LICENSE"],
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"clean": "rimraf dist",
		"test": "vitest",
		"test:coverage": "vitest run --coverage",
		"lint": "eslint src --ext ts,tsx",
		"format": "biome format --write",
		"prepublishOnly": "pnpm run clean && pnpm run build",
		"typecheck": "tsc --noEmit",
		"release": "changeset publish"
	},
	"keywords": [
		"mastra",
		"agent",
		"permission",
		"security",
		"access-control",
		"tools",
		"react",
		"typescript"
	],
	"author": "toruSakari",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/toruSakari/mastra-permission-tools.git"
	},
	"bugs": {
		"url": "https://github.com/toruSakari/mastra-permission-tools/issues"
	},
	"homepage": "https://github.com/toruSakari/mastra-permission-tools#readme",
	"dependencies": {
		"@mastra/core": "^0.6.3",
		"zod": "^3.22.0"
	},
	"peerDependencies": {
    "@mastra/core": "^0.6.3",
		"react": "^18.0.0",
		"react-dom": "^18.0.0"
	},
	"peerDependenciesMeta": {
		"react": {
			"optional": true
		},
		"react-dom": {
			"optional": true
		}
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@changesets/cli": "^2.27.1",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.3.0",
		"@types/node": "^20.11.24",
		"@types/react": "^18.2.64",
		"@types/react-dom": "^18.2.21",
		"@typescript-eslint/eslint-plugin": "^7.1.1",
		"@typescript-eslint/parser": "^7.1.1",
		"@vitejs/plugin-react": "^4.4.1",
		"@vitest/coverage-v8": "^1.3.1",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-react": "^7.34.0",
		"eslint-plugin-react-hooks": "^4.6.0",
		"jsdom": "^26.1.0",
		"prettier": "^3.2.5",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"rimraf": "^5.0.5",
		"tsup": "^8.0.2",
		"typescript": "^5.3.3",
		"vitest": "^1.3.1"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
